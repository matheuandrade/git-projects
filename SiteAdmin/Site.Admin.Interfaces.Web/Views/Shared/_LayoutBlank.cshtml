@{
    string msg = TempData["MensagemTela"] != null ? TempData["MensagemTela"].ToString() : string.Empty;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/smartadmin")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mask")
    @Scripts.Render("~/bundles/util")
    @Scripts.Render("~/bundles/notification")
</head>
<body>
    @RenderBody()

    <script>
        $(function () {
            if ('@msg' != "") {
                ShowMessage('@msg');
            }
        });
    </script>
</body>
</html>
