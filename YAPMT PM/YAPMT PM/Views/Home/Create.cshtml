@model YAPMT_PM.Models.Project

@{
    ViewBag.Title = "Create";
}


@{Html.RenderAction("ProjectsPartial", "Home");} 


 <div class="container-fluid">
      <div class="row">

        <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
          @*<h1>Dashboard</h1>*@
                        @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <legend>New Project</legend>
        
                           <form>
                              <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label">Name:</label>
                                <div class="col-sm-6">
                                  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = 30})
                                  @Html.ValidationMessageFor(model => model.Name)
                                </div>
                              </div>
                           </form>


                            <p>
                                <input class="btn btn-primary" type="submit" value="Create">
                            </p>
                        </fieldset>
                    }

@*                    <div>
                        @Html.ActionLink("Back", "Projects")
                    </div>*@

        </main>
      </div>
    </div>


<script src="~/Scripts/jquery-3.0.0.slim.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/popper-utils.min.js"></script>
